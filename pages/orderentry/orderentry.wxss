/* pages/orderentry/orderentry.wxss */
.images {
  width: 100%;
  height: 450rpx;
}

.content {
  position: fixed;
  top: 24rpx;
  left: 30rpx;
  width: 690rpx;
  height: calc(100% - 124px);
  padding: 57rpx 45rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow-y: scroll;
}
.row {
  display:flex;
  align-items: center;
  margin-top: 22rpx;
}

.lable {
  white-space: nowrap;
  width: 112rpx;
  height: 24rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #121212;
  line-height: 24rpx;
  margin-right: 22rpx;
}

.input {
  width: 434rpx;
  height: 70rpx;
  background: #FFFFFF;
  display: inline-block;
  box-shadow: -4rpx 2rpx 23rpx 0rpx rgba(218, 218, 218, 0.48);
  border-radius: 4rpx;
  padding: 0 37rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.textarea {
  align-items: end;
}
textarea {
  padding: 23rpx 37rpx !important;
  min-height:179rpx;
}
.date {
  display: flex;
  align-items: center;
}
.footer {
  position: fixed;
  left: 0;
  bottom:0;
  width: 100%;
  height: 124rpx;
  box-shadow: 0px 1rpx 27rpx 0rpx rgba(80, 80, 80, 0.18);
  display: flex;
  justify-content: space-evenly;
  display: flex;
  align-items: center;
}
.button {
  box-sizing: border-box;
  width: 295rpx;
  height: 69rpx;
  background-color: grey;
  border: none;
  border-radius: 35px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.save {
  background-color: #5D85F5;
}